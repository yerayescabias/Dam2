</div>
<div class="carousel-inner">
@{var itemLerroko = 0;
var fila1 = false;}

@{
foreach (var item in Model)
{
if (itemLerroko == 0)
{
if (fila1 == false)
{
@:<div class="carousel-item active">
@: <div class="row">
}
else
{
@:<div class="carousel-item">
@: <div class="row">
}
}


