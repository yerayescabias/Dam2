<odoo>
    <!-- kargatu info -->
    <record id="kargatu" model="ir.ui.view">
        <field name="name">res.users.tree.inherit.telefonoa</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree" />
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="telefonoa"/>  
                <field name="email"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- akzioa ikusteko -->
    <record id="action_erabiltzaileak_ikusi" model="ir.actions.act_window">
        <field name="name">Erabiltzaileak</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="kargatu" />
    </record>

    <!-- ezkerreko menua  erabiltzaileak ikusi (root) -->
    <menuitem id="menu_erabiltzaileak" name="Erabiltzaileak Ikusi" sequence="1" />

    <!-- azpimenua Ikusi -->
    <menuitem id="menu_erabiltzaileak_ikusi" name="Ikusi" parent="menu_erabiltzaileak" sequence="1" action="action_erabiltzaileak_ikusi" />
</odoo>